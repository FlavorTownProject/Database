<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.database.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Condition"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:textAppearance="@android:style/TextAppearance.Material.Large"
        android:id="@+id/textViewCondition" />

    <Button
        android:text="Sunny"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="67dp"
        android:id="@+id/buttonSunny"
        android:layout_below="@+id/textViewCondition"
        android:layout_toLeftOf="@+id/textViewCondition"
        android:layout_toStartOf="@+id/textViewCondition" />

    <Button
        android:text="Foggy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonFoggy"
        android:layout_alignBaseline="@+id/buttonSunny"
        android:layout_alignBottom="@+id/buttonSunny"
        android:layout_toRightOf="@+id/textViewCondition"
        android:layout_toEndOf="@+id/textViewCondition" />
</RelativeLayout>
